<?xml version="1.0" encoding="UTF-8" ?><!--说明这是一个xml文件-->
<!--指定文档类型，并引用mybatis地址-->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--定义一个Maper节点，mybatis会根据这个节点生成一个java类-->
<mapper namespace="com.crowdos.crowdos_community_backend.mapper.BmsCommentMapper">

    <resultMap id="commentVO" type="com.crowdos.crowdos_community_backend.model.vo.CommentVO">
        <id column="id" property="id"/>
        <result column="content" property="content"/>
        <result column="user_id" property="userId"/>
        <result column="topic_id" property="topicId"/>
        <result column="username" property="userName"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="getCommentsByTopicID" resultMap="commentVO">
        select bms_comment.*, ums_user.username
        from bms_comment
        join ums_user on ums_user.id = bms_comment.user_id
        where topic_id = #{topicid}
        order by create_time desc
    </select>
</mapper>